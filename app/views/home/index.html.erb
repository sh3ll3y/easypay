<div class="container text-center mt-5">
  <h1><%= t('custom.call_to_action') %></h1>
  <div class="row justify-content-center mt-5">
    <% @billers.each do |biller| %>
      <div class="col-md-3 mb-4">
        <%= link_to biller_path(biller), class: "text-decoration-none" do %>
          <div class="card bg-white text-dark">
            <div class="card-body">
              <h5 class="card-title"><%= biller.name %></h5>
            </div>
          </div>
        <% end %>
        <% if user_signed_in? && current_user.admin? %> <!-- Conditionally show delete button for admins -->
          <%= button_to 'Delete', biller_path(biller), method: :delete, 
              data: { confirm: 'Are you sure you want to delete this biller?' },
              class: 'btn btn-danger btn-sm mt-2' %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
