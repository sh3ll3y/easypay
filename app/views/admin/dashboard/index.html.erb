
<div class="container mt-4">
  <h1 class="mb-4">Admin Dashboardd</h1>

  <div class="row mb-4">
    <div class="col-md-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Total Users</h5>
          <p class="card-text display-4"><%= @total_users %></p>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Total Transactions</h5>
          <p class="card-text display-4"><%= @total_transactions %></p>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Total Transaction Value</h5>
          <p class="card-text display-4">₹<%= number_with_precision(@total_transaction_value, precision: 1) %></p>
        </div>
      </div>
    </div>
  </div>
  <br/>
  <h2>Recent Transactions</h2>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>ID</th>
        <th>User</th>
        <th>Biller Name</th>
        <th>Amount</th>
        <th>Status</th>
        <th>Date</th>
      </tr>
    </thead>
    <tbody>
      <% @recent_transactions.each do |transaction| %>
        <tr>
          <td><%= transaction.id %></td>
          <td><%= transaction.user.email %></td>
          <td><%= transaction.biller.name %></td>
          <td>₹<%= number_with_precision(transaction.amount, precision: 2) %></td>
          <td><%= transaction.status %></td>
          <td><%= transaction.created_at.strftime("%B %d, %Y %H:%M") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="pagination">
    <%= paginate @recent_transactions %>
  </div>
</div>
