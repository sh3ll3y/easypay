<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0"><%= @biller.name %> Recharge Plans</h1>
    <%= link_to t('buttons.back'), root_path, class: 'btn btn-secondary' %>
  </div>
  <div class="row justify-content-center">
    <div class="col-md-8">
      <% @biller.plans.each do |amount, details| %>
        <div class="card bg-white text-dark mb-3">
          <div class="card-body d-flex justify-content-between align-items-center">
            <div>
              <h5 class="card-title mb-0">â‚¹<%= amount %></h5>
              <p class="card-text mt-2"><%= details %></p>
            </div>
            <% if user_signed_in? %>
              <%= link_to t('buttons.recharge'), new_biller_transaction_path(@biller, amount: amount, details: details), class: "btn btn-primary" %>
            <% else %>
              <%= link_to t('buttons.recharge'), new_user_session_path, class: "btn btn-primary" %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
