<h1><%= t('buttons.my_downd') %></h1>

<table class="table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Status</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @downloads.each do |download| %>
      <tr>
        <td><%= download.created_at.to_s(:long) %></td>
        <td><%= download.status %></td>
        <td>
          <% if download.completed? %>
            <%= link_to t('buttons.download'), download.full_url, class: "btn btn-sm btn-primary" %>
          <% else %>
            Incomplete
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @downloads %>
